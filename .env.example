# .env.example (Local LLM + Freshdesk)
PORT=3000
BASE_URL=http://localhost:3000
CORS_ORIGINS=*

# KB
KB_ROOT=https://boxful.freshdesk.com/support/solutions/
KB_MAX_PAGES=120
DATA_DIR=./data
VECTORS_FILE=./data/vectors.json

# Chat model
LLM_PROVIDER=gemini

# Embeddings
EMBED_PROVIDER=gemini
UI_CHAT_MODELS_GEMINI=gemini-2.5-flash,gemini-2.5-pro
UI_EMBED_MODES=gemini,huggingface_api,local_cpu

# Gemini API
GEMINI_API_KEY=tu_api_key
GEMINI_CHAT_MODEL=gemini-2.5-flash
GEMINI_CHAT_MODELS=gemini-2.5-flash,gemini-2.5-pro
GEMINI_EMBED_MODEL=gemini-embedding-001
GEMINI_EMBED_MAX_CHARS=8000

# Hugging Face embeddings (opcional)
# EMBED_PROVIDER=huggingface
# Opción 1: Hugging Face Router API (gratis con límites)
# HF_API_TOKEN=hf_xxx
# HF_EMBED_MODEL=intfloat/multilingual-e5-small
# Opción 2: endpoint local (CPU), ej. TEI en http://localhost:8080/embed
# HF_EMBED_URL=http://localhost:8080/embed
# HF_EMBED_LOCAL_URL=http://localhost:8080/embed
# HF_EMBED_MAX_CHARS=4000

# Retrieval
TOP_K=6
MIN_SCORE=0.78

# Ingest
INGEST_CONCURRENCY=1
EMBED_RETRIES=2
CHUNK_SIZE_CHARS=950
CHUNK_OVERLAP_CHARS=200
USER_AGENT=BoxfulRAGBot/0.1 (+https://www.boxful.io)
SCRAPE_RETRIES=5
SCRAPE_MIN_DELAY_MS=250
SCRAPE_MAX_DELAY_MS=2500
SCRAPE_HTTP_TIMEOUT_MS=20000

# Debug
# NO_LLM=1
